

<div class="panel panel-default ppanel-primary ccol-sm-offset-2 ccol-sm-10">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('context.submission_form.form_title') %></h3>
  </div>
  <div class="panel-body">

<%#= form_for(@submission, url: context_submissions_path(@context), :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
<%= form_for(@submission, url: @submission.persisted? ? submission_path(@submission) : context_submissions_path(@context), :html => { :class => "form-horizontal", :role => "form" }) do |f| %>

  <%#= render partial: 'common/forms/form_error_alert', locals: {form_model: @journal_submission} %>

      <%#= f.hidden_field :journal_id, :class => "form-control" %>
  <div class="form-group">
    <%= f.label t('context.submission_form.title'), :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label t('context.submission_form.abstract'), :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :abstract, :class => "form-control" %>
    </div>
  </div>

  <% if policy(@submission).update? or not @submission.persisted? %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%#= f.submit :class => "btn btn-primary" %>
      <%= f.button :class => "btn btn-success" do %>
        <i class="fa fa-check fa-lg"></i>
        <%= t('context.submission_form.submit_'+(@submission.persisted? ? 'update' : 'new') ) %>
      <% end %>
    </div>
  </div>
  <% end %>

<% end %>

</div>

