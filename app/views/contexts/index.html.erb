<div class="container">
  

<div class="page-header">
  <%= link_to new_context_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Context
  <% end %>
  <h1>Listing contexts</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Desription</th>
            <th>Slug</th>
            <th>Type</th>
            <th>Owner</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @contexts) do |context| %>
            <td><%= context.title %></td>
            <td><%= context.description %></td>
            <td><%= context.slug %></td>
            <td><%= context.type %></td>
            <td><%= context.user ? context.user.full_name : '' %></td>
            <td><%= link_to 'Show', context %></td>
            <!--td><%#= link_to 'Show', context_path(context) %></td-->
        <td><%= link_to 'Edit', edit_context_path(context) %></td>
        <td><%= link_to 'Destroy', context, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <!--td><%#= link_to 'Destroy', context_path(context), method: :delete, data: { confirm: 'Are you sure?' } %></td-->
      <% end %>
    </tbody>
  </table>
</div>


</div>
