<div class="container">
  

<div class="page-header clear">
  <%= link_to new_context_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t('context.contexts.new_context_btn') %>
  <% end %>
  <h1><%= t('context.contexts.list_title') %></h1>
</div>


<div class="panel panel-default">
  <div class="panel-heading">Journals</div>
<ul class="list-group">
      <%= content_tag_for(:li, @journals, class: 'list-group-item') do |context| %>
        <!--h4 class="list-group-item-heading"><%#= link_to context.title, context %></h4-->
        <h4 class="list-group-item-heading"><%= link_to context.title, context_path(context) %></h4>
        <p class="list-group-item-text"><%= context.description %></p>
        <% if current_user==context.user %>
          <p class="list-group-item-text">
            <%= link_to 'Edit', edit_context_path(context) %> | <%= link_to 'Destroy', context, method: :delete, data: { confirm: 'Are you sure?' } %>
          </p>
        <% end %>
      <% end %>
</ul>
</div>

<div class="panel panel-default">
  <div class="panel-heading">Conferences</div>
<ul class="list-group">
      <%= content_tag_for(:li, @conferences, class: 'list-group-item') do |context| %>
        <!--h4 class="list-group-item-heading"><%#= link_to context.title, context %></h4-->
        <h4 class="list-group-item-heading"><%= link_to context.title, context_path(context) %></h4>
        <p class="list-group-item-text"><%= context.description %></p>
        <% if current_user==context.user %>
          <p class="list-group-item-text">
            <%= link_to 'Edit', edit_context_path(context) %> | <%= link_to 'Destroy', context, method: :delete, data: { confirm: 'Are you sure?' } %>
          </p>
        <% end %>
      <% end %>
</ul>
</div>



