<%#= form_for(@context, uurl: context_url(@context), html: { class: "form-horizontal", role: "form" }) do |f| %>
<%= form_for(@context, as: :context, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @context.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@context.errors.count, "error") %> prohibited this context from being saved:</h4>

      <ul>
      <% @context.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :slug, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :slug, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%#= f.text_field :type, class: "form-control" %>
      <%#= f.select :type, ::Context::Types, class: "form-control" %>
      <%= f.select :type, @context.class::Types, class: "form-control" %>
    </div>
  </div>
  <!--div class="form-group">
    <%#= f.label :user, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%#= f.text_field :user, class: "form-control" %>
    </div>
  </div-->
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
